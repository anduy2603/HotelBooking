@{
    ViewData["Title"] = "Home";
}

<div class="hero-section">
    <div class="hero-content">
        <h1 class="hero-title">Welcome to Our Luxury Hotel</h1>
        <p class="hero-subtitle">Experience comfort and elegance in every stay</p>
        <a href="/Booking" class="btn btn-primary btn-lg">Book Now</a>
    </div>
</div>

<section class="container my-5">
    <h2 class="text-center mb-4">Our Featured Rooms</h2>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card room-card">
                <img src="/images/room-single.jpg" class="card-img-top" alt="Single Room">
                <div class="card-body">
                    <h5 class="card-title">Single Room</h5>
                    <p class="card-text">Perfect for solo travelers, featuring a comfortable single bed and modern amenities.</p>
                    <p class="room-price">$99/night</p>
                    <a href="/Room/Details/1" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card room-card">
                <img src="/images/room-double.jpg" class="card-img-top" alt="Double Room">
                <div class="card-body">
                    <h5 class="card-title">Double Room</h5>
                    <p class="card-text">Spacious room with two comfortable beds, ideal for couples or friends.</p>
                    <p class="room-price">$149/night</p>
                    <a href="/Room/Details/2" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card room-card">
                <img src="/images/room-suite.jpg" class="card-img-top" alt="Suite">
                <div class="card-body">
                    <h5 class="card-title">Luxury Suite</h5>
                    <p class="card-text">Our premium suite with separate living area and premium amenities.</p>
                    <p class="room-price">$299/night</p>
                    <a href="/Room/Details/3" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="bg-light py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <h2>Why Choose Us?</h2>
                <ul class="list-unstyled">
                    <li class="mb-3"><i class="fas fa-check-circle text-primary me-2"></i> Prime location in the city center</li>
                    <li class="mb-3"><i class="fas fa-check-circle text-primary me-2"></i> Modern amenities and facilities</li>
                    <li class="mb-3"><i class="fas fa-check-circle text-primary me-2"></i> 24/7 customer support</li>
                    <li class="mb-3"><i class="fas fa-check-circle text-primary me-2"></i> Free Wi-Fi throughout the hotel</li>
                    <li class="mb-3"><i class="fas fa-check-circle text-primary me-2"></i> Complimentary breakfast</li>
                </ul>
            </div>
            <div class="col-md-6">
                <img src="/images/hotel-facilities.jpg" alt="Hotel Facilities" class="img-fluid rounded">
            </div>
        </div>
    </div>
</section>

<section class="container my-5">
